{
  "name": "navigation",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "git:tag": "git tag v`node tasks/get-version.js`",
    "test": "NODE_ENV=test jest",
    "dev": "DEBUG=navigation:* node ./bin/www",
    "update:version": "update-version",
    "update:version:patch": "update-version --patch",
    "update:version:minor": "update-versioni --minor",
    "update:version:major": "update-version --major",
    "docker:build": "docker build -t $(node tasks/get-app-name.js):$(node tasks/get-version.js) .",
    "k8s:update:deployment": "VERSION=$(node tasks/get-version.js) envsubst < k8s/template.deployment.yaml > k8s/deployment.yaml"
  },
  "dependencies": {
    "cookie-parser": "1.4.5",
    "debug": "2.6.9",
    "ejs": "2.7.4",
    "express": "4.17.1",
    "http-errors": "1.8.0",
    "morgan": "1.9.1"
  },
  "devDependencies": {
    "@jahid90/package": "1.0.1",
    "jest": "26.5.3",
    "supertest": "5.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
